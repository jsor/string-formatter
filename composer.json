{
    "name": "jsor/string-formatter",
    "description": "Localized formatting of personal names, addresses and telephone numbers.",
    "keywords": [
        "string",
        "name",
        "address",
        "postal",
        "telephone",
        "phone",
        "number",
        "format",
        "formatting",
        "intl",
        "locale",
        "localized",
        "i18n"
    ],
    "authors": [
        {
            "name": "Jan Sorgalla",
            "email": "jsorgalla@gmail.com"
        }
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jsor\\StringFormatter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jsor\\StringFormatter\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "jsor/locale-data": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.29",
        "friendsofphp/php-cs-fixer": "^3.12"
    }
}
